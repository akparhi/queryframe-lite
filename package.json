{
  "name": "@inkheart/queryframe-lite",
  "description": "Typesafe SDK generator for REST APIs",
  "version": "0.5.0",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.ts",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "akparhi",
  "homepage": "",
  "repository": {
    "url": "https://github.com/akparhi/queryframe-lite"
  },
  "keywords": [
    "sdk builder",
    "rest sdk",
    "api sdk",
    "rest sdk builder",
    "api sdk builder"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsup",
    "pub": "rm -rf ./dist && tsup && npm publish --access public",
    "lint": "eslint .",
    "format": "prettier . --write \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "zod": "^3.22.4",
    "zodock": "^0.0.14"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/eslint": "^8.56.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2022": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": true
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports",
          "fixStyle": "inline-type-imports"
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "ignorePatterns": [
      ".vscode",
      "dist",
      "**/*.d.ts",
      ".eslintrc.js",
      "**/package.json",
      "pnpm-lock.yaml",
      "tsup.config.ts"
    ],
    "reportUnusedDisableDirectives": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[../]",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "importOrderTypeScriptVersion": "4.4.0"
  }
}
